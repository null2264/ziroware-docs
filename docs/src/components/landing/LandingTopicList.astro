---
import { CardGrid } from "@astrojs/starlight/components"
import IconLinkCard from "../IconLinkCard.astro"

const excluded = ["landing"]
const { topics } = Astro.locals.starlightSidebarTopics
---

<CardGrid>
  {
    topics.map((topic) =>
      (excluded.includes(topic.label.toLowerCase())) ? null :
      (
        <IconLinkCard icon={topic.icon} title={topic.label} href={topic.link} />
      )
    )
  }
</CardGrid>
